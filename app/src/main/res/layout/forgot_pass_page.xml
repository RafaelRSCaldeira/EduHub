<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logInLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="@dimen/back_btn_margin_top"
        android:layout_marginStart="@dimen/back_btn_margin_left"
        android:src="@drawable/left_arrow"
        android:background="@drawable/button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/bg_main_color"
        android:contentDescription="@string/back_btn_desc"/>


    <ImageView
        android:id="@+id/eduhubLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="146dp"
        android:scaleY="1.3"
        android:scaleX="1.3"
        app:tint="@color/main_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lock_icon"/>

    <TextView
        android:id="@+id/eduhubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="30dp"
        android:text="@string/eduhub"
        android:textColor="@color/main_green"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eduhubLogo" />

    <TextView
        android:id="@+id/resetPassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87.4dp"
        android:layout_marginTop="30dp"
        android:text="@string/forgot_password"
        android:textColor="@color/main_green"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eduhubText" />

    <TextView
        android:id="@+id/resetPassHintText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:text="@string/reset_pass_text"
        android:textAlignment="center"
        android:textColor="@color/main_green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPassText" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_heigth"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:alpha="0.5"
        android:autofillHints="emailAddress"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPassHintText"
        tools:ignore="TextContrastCheck" />


    <Button
    android:id="@+id/resetPassButton"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
    android:layout_marginStart="35dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/button_bg"
    android:text="@string/reset_pass_btn"
    android:textColor="@color/bg_main_color"
    android:textSize="20sp"
    app:cornerRadius="40dp"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@id/emailEditText"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="VisualLintButtonSize"/>

</androidx.constraintlayout.widget.ConstraintLayout>