<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/eduhubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/eduhub"
            android:text="@string/eduhub"
            android:textColor="@color/main_green"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="120dp"
            android:layout_height="126dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eduhubText"
            app:srcCompat="@drawable/ic_account"
            app:tint="@color/light_gray" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/eduhub"
            android:text="username"
            android:textColor="@color/light_gray"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userIcon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_white"
            android:padding="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button_personal_info"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                android:textSize="25sp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_user"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/button_about_us"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:textSize="25sp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_question_mark"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/button_help_and_support"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/help_and_support"
                android:textSize="25sp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_headset"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawablePadding="10dp"/>



        </LinearLayout>

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:contentDescription="@string/eduhub"
            android:text="@string/version"
            android:textColor="@color/light_gray"
            android:alpha="0.5"
            android:textSize="@dimen/h3_size"
            android:textStyle="bold" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_main_color">

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_home"
            android:background="@drawable/bg_nav"
            android:contentDescription="@string/account_exists"
            app:tint="@color/dark_color"/>

        <ImageButton
            android:id="@+id/button_certificates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_certificate"
            android:background="@drawable/bg_nav"
            android:contentDescription="@string/account_exists"
            app:tint="@color/dark_color"/>

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_menu"
            android:background="@drawable/bg_nav_selected"
            android:contentDescription="@string/account_exists"
            app:tint="@color/dark_color" />

    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>